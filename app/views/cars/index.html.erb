<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Car name</th>
      <th>Car no</th>
      <th>Car model</th>
      <th>Car length</th>
      <th>Car manufacture</th>
      <th>Car price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.car_name %></td>
        <td><%= car.car_no %></td>
        <td><%= car.car_model %></td>
        <td><%= car.car_length %></td>
        <td><%= car.car_manufacture %></td>
        <td><%= car.car_price %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

